.signup-container
  %header.signup-header
    %h1
      %a{ href: "" }
        = image_tag("logo_signup_top", alt: :"mercari" ,class: "signup-header__logo")
      .signup-header__progress
        .progress
          .progress__item
            .progress__title.progress--done 会員情報
            .progress__dot.progress--done
              .fas.fa-circle
              .progress__line.progress--done
          .progress__item
            .progress__title.progress--done 電話番号確証
            .progress__dot.progress--done
              .fas.fa-circle
              .progress__line.progress--done
          .progress__item
            .progress__title.progress--done 住所入力
            .progress__dot.progress--done
              .fas.fa-circle
              .progress__line.progress--done
          .progress__item
            .progress__title.progress--done 支払い方法
            .progress__dot.progress--done
              .fas.fa-circle
              .progress__line
          .progress__item
            .progress__title 完了
            .progress__dot
              .fas.fa-circle
  %main.signup-main
    %section.l-signup-container
      .signup-main
        .signup-main__title 支払い方法入力
        .signup-main__wrap
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            .field
              .input-form__name カード情報
              .input-form__icon 必須
              %br/
              = f.text_field :first_name, placeholder: '半角数字のみ', class: "signup_input"
            .field
              .input-form__name 有効期限
              .input-form__icon 必須
              %br/
              = f.text_field :first_name_kana, placeholder: '月', class: "signup_input"
              %br/
              = f.text_field :last_name_kana, placeholder: '年', class: "signup_input"
            .field
              .input-form__name セキュリティコード
              .input-form__icon 必須
              %br/
              = f.text_field :zip, placeholder: 'カード背面4桁もしくは3桁の', class: "signup_input"
            .actions
              = f.submit "次へ進む", class: "signup_button"
  %footer.signup-footer
    = render "signup-footer"
