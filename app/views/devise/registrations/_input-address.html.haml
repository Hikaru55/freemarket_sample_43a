.signup-container
  %header.signup-header
    %h1
      %a{ href: "" }
        = image_tag("logo_signup_top", alt: :"mercari" ,class: "signup-header__logo")
      .signup-header__progress
        .progress
          .progress__item
            .progress__title.progress--done 会員情報
            .progress__dot.progress--done
              .fas.fa-circle
              .progress__line.progress--done
          .progress__item
            .progress__title.progress--done 電話番号確証
            .progress__dot.progress--done
              .fas.fa-circle
              .progress__line.progress--done
          .progress__item
            .progress__title.progress--done 住所入力
            .progress__dot.progress--done
              .fas.fa-circle
              .progress__line
          .progress__item
            .progress__title 支払い方法
            .progress__dot
              .fas.fa-circle
              .progress__line
          .progress__item
            .progress__title 完了
            .progress__dot
              .fas.fa-circle
  %main.signup-main
    %section.l-signup-container
      .signup-main
        .signup-main__title 住所入力
        .signup-main__wrap
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            .field
              .input-form__name お名前
              .input-form__icon 必須
              %br/
              = f.text_field :first_name, placeholder: '例）ピコ', class: "signup_input"
              %br/
              = f.text_field :last_name, placeholder: '例）太郎', class: "signup_input"
            .field
              .input-form__name お名前カナ
              .input-form__icon 必須
              %br/
              = f.text_field :first_name_kana, placeholder: '例）ピコ', class: "signup_input"
              %br/
              = f.text_field :last_name_kana, placeholder: '例）タロウ', class: "signup_input"
            .field
              .input-form__name 郵便番号
              .input-form__icon 必須
              %br/
              = f.text_field :zip, placeholder: '例）123-4567', class: "signup_input"
            .field
              .input-form__name 都道府県
              .input-form__icon 必須
              %br/
              = f.text_field :prefecture, placeholder: '例）東京都', class: "signup_input"
            .field
              .input-form__name 市区町村
              .input-form__icon 必須
              %br/
              = f.text_field :city, placeholder: '例）渋谷区代々木', class: "signup_input"
            .field
              .input-form__name 番地
              .input-form__icon 必須
              %br/
              = f.text_field :block, placeholder: '例）12-45-90909', class: "signup_input"
            .field
              .input-form__name 建物名
              .input-form__icon.input-form__icon--gray 任意
              %br/
              = f.text_field :building, placeholder: '例）ピコピコピコマンション', class: "signup_input"
            .field
              .input-form__name 電話
              .input-form__icon.input-form__icon--gray 任意
              %br/
              = f.text_field :tell, placeholder: '例）080-1122-3322', class: "signup_input"
            .actions
              = f.submit "次へ進む", class: "signup_button"
  %footer.signup-footer
    = render "signup-footer"
