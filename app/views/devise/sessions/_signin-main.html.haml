.signin-panel
  .signin__no-account
    %p
      アカウントをお持ちでない方はこちら
    = link_to "新規会員登録", new_registration_path(resource_name)
  .signin__sns
    %btn.btn-default.btn-sns.btn-sns-facebook
      Facebookでログイン
      %i.icon-facebook.fab.fa-facebook
    %btn.btn-default.btn-sns.btn-sns-google
      Googleでログイン
      %i.icon-google-plus.fab.fa-google-plus-g
  %form
    .signin__form-inner
      .form-group
        %input{ type: "email", name: "email", placeholder: "メールアドレス", class: "signin__input-text input__default"}
      .form-group
        %input{ type: "password", name: "password", placeholder: "パスワード", class: "signin__input-text input__default"}
      .form-group
        .g-recaptcha.signin__captcha
      %button.signin__submit.btn-default.btn-red
        ログイン

      %a
        パスワードをお忘れの方
